# Application Configuration
APP_NAME=Open MCP Skills
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Skills
SKILLS_DIR=./skills
SKILLS_WATCH_ENABLED=true

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_SKILLS_CHANNEL=mcp:skills:updates

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB (use local endpoint for development)
DYNAMODB_ENDPOINT_URL=http://localhost:8001
DYNAMODB_SKILLS_TABLE=mcp-skills
DYNAMODB_SESSIONS_TABLE=mcp-sessions

# S3 (use LocalStack endpoint for development)
S3_ENDPOINT_URL=http://localhost:4566
S3_SKILLS_BUCKET=mcp-skills-bucket

# Authentication (AWS Cognito)
COGNITO_ENABLED=false
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Sandbox
SANDBOX_ENABLED=true
SANDBOX_TIMEOUT_SECONDS=30
SANDBOX_MEMORY_LIMIT_MB=512

# LLM Configuration (for Agentic Skills)
LLM_PROVIDER=bedrock
LLM_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
